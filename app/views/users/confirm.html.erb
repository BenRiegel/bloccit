<h1>Sign Up Confirmation</h1>
<h2>Are you sure these values are correct?</h2>

<div class="row">
  <div class="col-md-4">
    <h4>Email: <%= @user.email %></h4>
    <h4>Name: <%= @user.name %></h4>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= button_to "Yes", {controller: "users", action: "create", params: {user: params.require(:user).permit(:name, :email, :password, :password_confirmation)}}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-4">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure', method:'get' %>
  </div>
</div>
